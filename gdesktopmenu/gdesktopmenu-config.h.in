#ifndef __GDESKTOPMENU_CONFIG_H__
#define __GDESKTOPMENU_CONFIG_H__

#include <glib-object.h>

G_BEGIN_DECLS;

#define GDESKTOPMENU_MAJOR_VERSION @GDESKTOPMENU_VERSION_MAJOR@
#define GDESKTOPMENU_MINOR_VERSION @GDESKTOPMENU_VERSION_MINOR@
#define GDESKTOPMENU_MICRO_VERSION @GDESKTOPMENU_VERSION_MICRO@

#define GDESKTOPMENU_CHECK_VERSION(major,minor,micro) \
  (GDESKTOPMENU_MAJOR_VERSION > (major) \
   || (GDESKTOPMENU_MAJOR_VERSION == (major) \
       && GDESKTOPMENU_MINOR_VERSION > (minor)) \
   || (GDESKTOPMENU_MAJOR_VERSION == (major) \
       && GDESKTOPMENU_MINOR_VERSION == (minor) \
       && GDESKTOPMENU_MICRO_VERSION >= (micro)))

extern const guint gdesktopmenu_major_version;
extern const guint gdesktopmenu_minor_version;
extern const guint gdesktopmenu_micro_version;

const gchar *gdesktopmenu_check_version (guint required_major,
                                         guint required_minor,
                                         guint required_micro);

G_END_DECLS;

#endif /* !__GDESKTOPMENU_CONFIG_H__ */
